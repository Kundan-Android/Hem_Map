<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.win8.nokia.Activity.MapsActivity" />


    <LinearLayout
        android:id="@+id/pickup_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="20dp"
        android:background="#fdfefe"
        android:orientation="vertical"
        android:padding="12dp">

        <!--<EditText-->
            <!--android:id="@+id/pickup"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_weight="4"-->
            <!--android:background="@drawable/shape"-->
            <!--android:hint="Pick Up"-->
            <!--android:paddingLeft="20dp"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="14sp" />-->

        <EditText
            android:id="@+id/bt_destination"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/pickup"
            android:layout_marginTop="05dp"
            android:layout_weight="4"
            android:background="@drawable/shape"
            android:gravity="center"
            android:hint="SelectDestination"
            android:textColor="#1d1d1e"
            android:textSize="14sp" />
        <Button
            android:id="@+id/destinationfromserver"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/pickup"
            android:layout_marginTop="05dp"
            android:layout_weight="4"
            android:background="@drawable/shape"
            android:hint="GetDestination"
            android:textColor="#1d1d1e"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff"
        android:weightSum="3"
        android:id="@+id/linearone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/tv_title"
            android:layout_weight="2"
            android:background="#4268f4"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="#4268f4"
            android:text="Start"
            android:textColor="#fff" />


    </LinearLayout>
</FrameLayout>
